#include<conio.h>
#include<stdio.h>

void main()
{
       int i,j,k,l,inp;
       clrscr();

       printf("Enter NO=");
       scanf("%d", & inp);

       for(i=1;i<=inp;i++)
       {
	for(j=1;j<=i;j++)
	{
	 printf("%d",j);
	}
	printf("\n");
       }
	for(i=inp-1;i>=1;i--)
	{
	 for(j=1;j<=i;j++)
	 {
	  printf("%d", j);
	 }
	 printf("\n");
	}
getch();
}
